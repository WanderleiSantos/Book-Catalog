<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_books"
    android:paddingBottom="8dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/bookThumbnail"
        android:layout_width="54dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/noimagebook"/>

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bookThumbnail"
        android:layout_marginLeft="56dp"
        android:alpha="0.87"
        android:gravity="right"
        android:padding="4dp"
        android:textSize="16sp"
        android:text="Java - Guia Completo"/>

    <TextView
        android:id="@+id/bookReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bookTitle"
        android:alpha="0.87"
        android:padding="4dp"
        android:textSize="14sp"
        android:text="11/12/2014"/>

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.87"
        android:padding="4dp"
        android:textSize="12sp"
        android:text="Author N/A"
        android:layout_below="@+id/bookReleaseDate"
        android:layout_alignRight="@+id/bookReleaseDate"
        android:layout_alignEnd="@+id/bookReleaseDate" />

</RelativeLayout>